@model AdminPoodle.Models.Pup

@{
    ViewData["Title"] = "Lägg till Valp";
}

<h1>Lägg till valp</h1>

<hr />
<div class="row">
    
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label> <br />
                    @Html.RadioButtonFor(m => m.Gender,"Hona") Hona <br>
                    @Html.RadioButtonFor(m => m.Gender,"Hane") Hane
                    
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <br>
             @Html.DisplayNameFor(model => model.Booked)
                <div class="form-group form-check">
                    <label class="form-check-label">
                    <input class="form-check-input" asp-for="Booked" /> 
                </label>
                </div>
            <br>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="AltText" class="control-label"></label>
                <input asp-for="AltText" class="form-control" />
                <span asp-validation-for="AltText" class="text-danger"></span>
            </div> 
            <br>
            <div class="form-group"><br>
                <input type="submit" value="Lägg till" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <br>
   <a asp-action="Index"><img src="~/icons/back.png" class="icon" alt="knapp för att gå tillbaka"/></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
